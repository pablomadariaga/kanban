{
  "name": "pablomadariaga/kanban",
  "description": "A Laravel Kanban board package with Livewire, Alpine.js Sortable plugin, and Tailwind CSS integration.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pablo",
      "email": "juanpablomadariagacardona@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Pablomadariaga\\Kanban\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pablomadariaga\\Kanban\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^11.0|^12.0",
    "illuminate/view": "^11.0|^12.0",
    "illuminate/database": "^11.0|^12.0",
    "livewire/livewire": "^3.5"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-livewire": "^3.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Pablomadariaga\\Kanban\\KanbanServiceProvider"
      ],
      "aliases": {
        "LivewireKanban": "Pablomadariaga\\Kanban\\KanbanFacade"
      }
    }
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
